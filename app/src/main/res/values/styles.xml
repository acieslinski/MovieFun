<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="label">
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="padded">
        <item name="android:paddingLeft">@dimen/padding_big</item>
        <item name="android:paddingRight">@dimen/padding_big</item>
    </style>

    <style name="title">
        <item name="android:lines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:background">@color/bright_color</item>
    </style>
</resources>
