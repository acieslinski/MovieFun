<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="compact-view"
    android:saveEnabled="false"
    tools:context=".MovieFun">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/fg_search_list"
            android:name="pl.acieslinski.moviefun.fragments.SearchList"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_search_list" />

        <fragment
            android:id="@+id/fg_video_list"
            android:name="pl.acieslinski.moviefun.fragments.VideoList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_video_list" />
    </LinearLayout>
</LinearLayout>
